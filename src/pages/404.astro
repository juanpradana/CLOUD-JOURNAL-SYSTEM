---
import Layout from "../layouts/Layout.astro";
import GlassCard from "../components/GlassCard.astro";
---

<Layout title="404 - Lost in the Void">
	<main class="flex items-center justify-center min-h-screen p-4 relative overflow-hidden">
        <!-- Background Animation -->
        <div class="absolute inset-0 z-[-1]">
             <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[360px] h-[360px] sm:w-[500px] sm:h-[500px] bg-blue-900/20 rounded-full blur-[100px] sm:blur-[120px] animate-pulse"></div>
        </div>

		<GlassCard className="max-w-md text-center space-y-6 border-red-500/20">
			<h1 class="text-7xl sm:text-8xl font-bold bg-clip-text text-transparent bg-gradient-to-b from-white to-white/10">
				404
			</h1>
			<div class="space-y-2">
				<h2 class="text-2xl font-bold text-white">Signal Lost</h2>
				<p class="text-gray-400">The transmission you are looking for does not exist in this sector.</p>
			</div>
			<div class="pt-4">
				<a href="/" class="px-6 py-3 bg-white/10 hover:bg-white/20 border border-white/20 rounded-full transition-all hover:scale-105 active:scale-95 inline-block">
					Return to Base
				</a>
			</div>
		</GlassCard>
	</main>
</Layout>
